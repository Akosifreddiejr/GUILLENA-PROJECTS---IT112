#include <stdio.h>
#include <string.h>

int main() {
    int n, i;
    int largest;

    printf("How many elements do you want to enter? ");
    scanf("%d", &n);

    if (n <= 0) {
        printf("Invalid number of elements.\n");
        return 0;
    }

    int arr[n];

    printf("Enter %d integers:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    largest = arr[0];

    for (i = 1; i < n; i++) {
        if (arr[i] > largest) {
            largest = arr[i];
        }
    }

    printf("\nThe largest element in the array is: %d\n", largest);

    char str[200];
    int vowelCount = 0;

    printf("\nEnter a String:\n");
    getchar();
    fgets(str, sizeof(str), stdin);

    for (i = 0; str[i] != '\0'; i++) {
        char ch = (str[i]);
        if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u') {
            vowelCount++;
        }
    }

    printf("The number of vowels in the string is: %d\n", vowelCount);

    return 0;
}
